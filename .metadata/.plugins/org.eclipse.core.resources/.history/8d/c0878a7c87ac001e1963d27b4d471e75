package com.springrest.springrest.services;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.springrest.springrest.advice.CourseNotFoundException;
import com.springrest.springrest.dao.CourseDao;
import com.springrest.springrest.entities.Course;

@Service
public class CourseServiceImpl implements CourseService{

    @Autowired
	private CourseDao coursedao;
    
	@Override
	public List<Course> getCourses() {
		
		return coursedao.findAll();
	}

	@Override
	public Optional<Course> getCourse(long CourseId) {

		return coursedao.findById(CourseId);
	}

	@Override
	public Course addCourse(Course course) {
		Course storedDetails=coursedao.findBytitle(course.getTitle());
		if(storedDetails!=null) throw new CourseNotFoundException("Record already exist");
		coursedao.save(course);
		return course;
	}

	@Override
	public Course updateCourse(Course course,long CourseId) {
		coursedao.save(course);
		return course;
		
	}

	@Override
	public String delete(long CourseId) {
		coursedao.deleteById(CourseId);;
		return "Record is deleted!!";
	}

	@Override
	public String deleteAll() {
		coursedao.deleteAll();
		return "All records deleted!!";
	}

}
